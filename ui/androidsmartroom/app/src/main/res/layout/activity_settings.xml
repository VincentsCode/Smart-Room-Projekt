<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabian.androidsmartroom.SettingsActivity">


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="32dp"
        android:text="Training    " />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/view2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="PersÃ¶nliche Daten"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/view2"
        android:text="Trainingsverwaltung und IPs" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignStart="@+id/textView10"
        android:ems="10"
        android:hint="Vorname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextFirstName"
        android:layout_below="@+id/editTextFirstName"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Nachname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextServerIp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/editTextLastName"
        android:layout_alignBottom="@+id/editTextLastName"
        android:layout_alignStart="@+id/switch1"
        android:ems="10"
        android:hint="Server IP"
        android:inputType="textPersonName" />

</RelativeLayout>
